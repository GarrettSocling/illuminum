<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:paddingBottom="20dp">
    <ImageButton
        android:id="@+id/logobw"
        android:layout_width="180dp "
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="00dp"
        android:layout_height="180dp"
        android:contentDescription="This is the switch to turn the webcam on an off"
        android:src= "@drawable/logobw"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to illumino"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="login"
        android:ems="10"
        android:id="@+id/login_name"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="pw"
        android:ems="10"
        android:id="@+id/login_pw"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="asdasd"
            android:textColor="#ffb60000"
            android:id="@+id/login_info"
            android:layout_gravity="left"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="forgot?"
            android:id="@+id/textView4"
            android:layout_gravity="right"
            android:gravity="right"
            android:textAlignment="gravity" />

    </LinearLayout>

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/login_button"
        android:background="@color/main_bg"
        android:layout_gravity="right" />


</LinearLayout><!-- From: file:/C:/Users/windkol/Documents/GitHub/illumino/android/app/src/main/res/layout/login.xml -->